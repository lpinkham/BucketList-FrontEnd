<div class="update-form">
  <form class="update-bucket" id="update-bucket" enctype="multipart/form-data" data-bucket-id="{{bucket._id}}">
      <h6>Update A Bucket</h6>

      <label for="bucket[_id]"class="hide">Bucket Id:</label>
      <input type="text" name="bucket[_id]" value="{{bucket._id}}" required class="hide"><br>

      <label for="bucket[title]">Title:</label>
      <input type="text" name="bucket[title]" value="{{bucket.title}}" required ><br>

      <label for="bucket[place]">Place:</label>
      <input type="text" name="bucket[place]" value="{{bucket.place}}" ><br>

      <label for="bucket[description]">Description:</label>
      <textarea name="bucket[description]" rows="3" value="{{bucket.description}}"></textarea><br>

      <label for="bucket[shareWith]">Who Would you like to share this with?</label>
      <input type="text" name="bucket[shareWith]" value="{{bucket.shareWith}}"><br>

      <label for="bucket[completeBy]">Complete By:</label>
      <input type="text" name="bucket[completeBy]" placeholder="YYYY-MM-DD"
      pattern="(?:19|20)[0-9]{2}-(?:(?:0[1-9]|1[0-2])-(?:0[1-9]|1[0-9]|2[0-9])|(?:(?!02)(?:0[1-9]|1[0-2])-(?:30))|(?:(?:0[13578]|1[02])-31))"
      title="YYYY-MM-DD" value="{{bucket.completeBy}}"/><br>

      <label for="bucket[completed]">Completed</label>
      <input type="checkbox" value="{{bucket.completed}}"><br>
      <button class="btn-outline-dark mr-2 edit-btn" id="update-bucket">Update</button>
    </form>
  </div>
